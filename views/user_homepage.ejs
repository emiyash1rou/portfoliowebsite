<%- include('header') -%>
<div class="shadow p-3 mb-5 bg-white rounded" style="margin: 2%; padding: 3%;">
    <h1>User Homepage</h1>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://blogs.windows.com/wp-content/uploads/prod/2020/08/windows-logo-social.png" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Add a Project</h5>
          <p class="card-text">Let's add a project</p>
          <a href="/addproject" class="btn btn-primary">Add a Project Here</a>
        </div>
      </div>
    <% if(projects!=null){ %>


 
    <table class="table">
        <thead>
          <tr>
           
            <th scope="col">Project Name</th>
            <th scope="col">Project Description</th>
            <th scope="col">Project Status</th>
            <th scope="col">Project Progress</th>
            <th scope="col">Project Display Picture</th>
            <th scope="col">Project Link</th>
            <th scope="col">Project Date</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
            <% for(let i=0;i<projects.length;i++){ %>
                <tr>
                    <th scope="row"><%= i+1 %> </th>
                    <td scope="row"><%= projects[i].project_name %></td>
                    <td><%= projects[i].project_description %></td>
                    <td><%= projects[i].project_status %></td>
                    <td><%= projects[i].project_progress %></td>
                    <td><img src="<%= projects[i].project_dp %>" style="width: 300px; height: 200px;"></td>
                    <td><a href="https://<%= projects[i].project_link %>"><%= projects[i].project_link %></a></td>
                    <td><%= projects[i].project_date %></td>
                    <td><a type="button" href="/editproject/<%= projects[i].id %>" class="btn btn-info">Edit Project</button></td>
                    <td><a type="button" href="/deleteproject/<%= projects[i].id %>" class="btn btn-danger">Delete Project</button></td>
                  </tr>
           <% } %>
          
        </tbody>
      </table>
      <% } else{ %>
        <h1> You do not have any recurring record.</h1>
    <%   } %>
</div>